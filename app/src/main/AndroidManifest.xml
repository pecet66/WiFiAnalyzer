<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.isk.wifi"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/ThemeAppCompatDark">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity
            android:name="com.isk.wifi.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.isk.wifi.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="com.vrem.wifianalyzer.MAINACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.isk.wifi.settings.SettingActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.isk.wifi.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isk.wifi.MainActivity"/>
        </activity>
        <activity
            android:name="com.isk.wifi.about.AboutActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.isk.wifi.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isk.wifi.MainActivity"/>
        </activity>
    </application>

</manifest>
