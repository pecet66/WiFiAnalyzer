<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/filterStrength"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_strength_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/filterStrength0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_signal_wifi_0_bar_black_36dp"/>

        <ImageView
            android:id="@+id/filterStrength1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_signal_wifi_1_bar_black_36dp"/>

        <ImageView
            android:id="@+id/filterStrength2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_signal_wifi_2_bar_black_36dp"/>

        <ImageView
            android:id="@+id/filterStrength3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_signal_wifi_3_bar_black_36dp"/>

        <ImageView
            android:id="@+id/filterStrength4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/ic_signal_wifi_4_bar_black_36dp"/>

    </LinearLayout>

    <include layout="@layout/separator_line"/>
</LinearLayout>
