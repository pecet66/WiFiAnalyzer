<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <!-- Column 1 -->
    <TextView
        tools:text="text"
        android:id="@+id/tab"
        android:layout_width="@dimen/list_view_item_horizontal_tab"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Column 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/groupIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                tools:text="Darmowe orange wifi (12:12:12:12:12:12)"
                android:id="@+id/ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:id="@+id/attachPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                tools:text="-62dBm"
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginLeft="@dimen/list_view_item_horizontal_tab"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginStart="@dimen/list_view_item_horizontal_tab"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:text="@string/channel_short_name"
                android:textColor="@color/channel"
                android:textStyle="bold"/>

            <TextView
                tools:text="11"
                android:id="@+id/channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:textColor="@color/channel_number"
                android:textStyle="bold"/>

            <TextView
                tools:text="2412MHz"
                android:id="@+id/primaryFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:textColor="@color/frequency"/>

            <ImageView
                android:id="@+id/securityImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_view_item_horizontal_spacer"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:contentDescription="@null"/>

            <TextView
                tools:text="~19.7m"
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/distance"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
