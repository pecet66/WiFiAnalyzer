<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/groupIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:visibility="gone"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="Darmowe Orange Wifi (12:12:12:12:12:12)" />


    <TextView
        android:id="@+id/level"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="170dp"
        tools:text="-64dBm" />

    <ImageView
        android:id="@+id/levelImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="54dp"
        tools:layout_height="40dp"
        tools:layout_width="40dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channel_short_name"
        android:textColor="@color/channel"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="22dp"
        tools:layout_conversion_absoluteWidth="45dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/channel"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/channel_number"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="22dp"
        tools:layout_conversion_absoluteWidth="65dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="79dp"
        tools:text="100(106)" />

    <TextView
        android:id="@+id/primaryFrequency"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/frequency"
        android:textSize="16sp"
        tools:layout_conversion_absoluteHeight="22dp"
        tools:layout_conversion_absoluteWidth="70dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="80dp"
        tools:text="5500MHz" />

    <TextView
        android:id="@+id/distance"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/distance"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_conversion_absoluteHeight="22dp"
        tools:layout_conversion_absoluteWidth="37dp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="170dp"
        tools:text="7.7m" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="170dp"
        tools:text="Odległość: " />

    <TextView
        android:id="@+id/channel_frequency_range"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/frequency"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="47dp"
        tools:text="2402-2422MHz" />

    <TextView
        android:id="@+id/width"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/frequency"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="47dp"
        tools:text="(20 MHz)" />

    <ImageView
        android:id="@+id/securityImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="113dp"
        tools:layout_height="20dp"
        tools:layout_width="20dp" />

    <TextView
        android:id="@+id/capabilities"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@color/security"
        android:textSize="16sp"
        android:textStyle="italic"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="113dp"
        tools:text="[WPA][WPA][WPA][WPA][WPA][WPA][WPA][WPA][WPA][WPA]" />

</android.support.constraint.ConstraintLayout>
